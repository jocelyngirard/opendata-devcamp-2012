<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_horizontal"
  android:paddingTop="20dip"
>
  <Button
    android:id="@+id/reportButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="@string/Home_report_button"
    android:drawableTop="@drawable/report"
    android:background="@drawable/abs__tab_indicator_holo"
    android:padding="20dip"
  />
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dip"
    android:layout_below="@id/reportButton"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="20dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
  >
    <Button
      android:id="@+id/agentButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/Home_mode_agent"
      android:drawableTop="@drawable/agent"
      android:background="@drawable/abs__tab_indicator_holo"
      android:padding="10dip"
    />
    <Button
      android:id="@+id/settingsButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/Home_settings"
      android:drawableTop="@drawable/settings"
      android:background="@drawable/abs__tab_indicator_holo"
      android:padding="10dip"
      android:layout_marginLeft="10dip"
      android:layout_marginRight="10dip"
    />
    <Button
      android:id="@+id/paypalButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/Home_support"
      android:drawableTop="@drawable/paypal"
      android:background="@drawable/abs__tab_indicator_holo"
      android:padding="10dip"
    />
  </LinearLayout>
  
  
  <ImageView
    android:id="@+id/mairieParis"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:src="@drawable/mairie_de_paris_logo"
  />
  
  <View 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#C8032D"
    android:layout_alignBaseline="@id/mairieParis"
    android:layout_alignTop="@id/mairieParis"
    android:layout_toRightOf="@id/mairieParis"
  />
  
</RelativeLayout>
